<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light"></style>

    <style name="AppThemeLight" parent="android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarLight</item>
    </style>

    <style name="ActionBarLight" parent="android:Widget.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/ActionBarLight.TitleText</item>
    </style>

    <style name="ActionBarLight.TitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
