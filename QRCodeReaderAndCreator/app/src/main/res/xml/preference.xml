<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="opendraw"
        android:title="启动时打开滑动菜单" />
    <CheckBoxPreference
        android:key="exitsettings"
        android:summary="System.exit(0)可以彻底关闭软件"
        android:title="使用System.exit(0)代替finish()" />
    <PreferenceScreen
        android:summary="可以避免第一次点击标签页时的卡顿"
        android:title="启动时要加载的项目">
        <CheckBoxPreference
            android:key="ldlgqr"
            android:title="生成logo二维码" />
        <CheckBoxPreference
            android:key="ldgr"
            android:title="相机扫描" />
        <CheckBoxPreference
            android:key="ldcr"
            android:title="从相册读取" />
        <CheckBoxPreference
            android:key="about"
            android:title="关于" />
        <CheckBoxPreference
            android:key="settings"
            android:title="设置" />
    </PreferenceScreen>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="useLightTheme"
        android:summaryOff="晚上迫害不瞎眼"
        android:summaryOn="白天迫害有精神"
        android:title="使用亮主题" />
</PreferenceScreen>
