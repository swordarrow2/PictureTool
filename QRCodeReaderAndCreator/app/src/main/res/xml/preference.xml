<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="opendraw"
        android:summary="启动时自动打开侧边栏"
        android:title="启动软件时自动打开菜单" />
    <CheckBoxPreference
        android:key="exitsettings"
        android:summaryOff="finish();让软件退出有过渡效果且下次打开更快"
        android:summaryOn="System.exit(0);可以彻底关闭应用"
        android:title="使用System.exit(0);代替finish();" />
    <PreferenceScreen
        android:key="ps1"
        android:summary="可以避免点击某标签页时加载的卡顿"
        android:title="启动时加载">
        <CheckBoxPreference
            android:key="ldqr"
            android:summary=""
            android:title="生成普通二维码" />
        <CheckBoxPreference
            android:key="ldlgqr"
            android:summary=""
            android:title="生成logo二维码" />
        <CheckBoxPreference
            android:key="ldgr"
            android:summary=""
            android:title="相机扫描" />
        <CheckBoxPreference
            android:key="ldcr"
            android:summary=""
            android:title="从相册读取" />
        <CheckBoxPreference
            android:key="about"
            android:summary=""
            android:title="关于" />
        <CheckBoxPreference
            android:key="settings"
            android:summary=""
            android:title="设置" />
    </PreferenceScreen>

    <CheckBoxPreference
        android:key="useLightTheme"
        android:summaryOff="半夜迫害不瞎眼"
        android:summaryOn="亮主题"
        android:title="使用亮主题" />
</PreferenceScreen>
