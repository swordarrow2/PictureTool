<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
>
    <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"/>

    <Button
        android:id="@+id/decode_gif_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decode GIF"
        />

    <Button
        android:id="@+id/decode_gif_using_iterator_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/decode_gif_btn"
        android:text="decode GIF using iterator"
        />

    <Button
        android:id="@+id/encode_gif_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/decode_gif_btn"
        android:text="encode GIF"
        />

    <Button
		android:id="@+id/gif_qr_mainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/decode_gif_btn"
        android:layout_toRightOf="@id/encode_gif_btn"
        android:text="disable dithering"
        />
</RelativeLayout>

