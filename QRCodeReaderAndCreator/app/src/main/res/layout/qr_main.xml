<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/qr_EditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_text" />

        <TextView
            android:id="@+id/qr_main_imgPathTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未选择图片，将会生成普通二维码" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/qr_ButtonSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/select_image" />

            <Button
                android:id="@+id/qr_ButtonRemoveImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/remove_image" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/qr_main_autoColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/auto_pick_color" />

        <LinearLayout
            android:id="@+id/qr_main_select_color_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/colordark_true_dots_dddddd" />

            <EditText
                android:id="@+id/qr_main_colorDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="#000000"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="#000000" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/colorlight_false_dots_dddddd" />

            <EditText
                android:id="@+id/qr_main_colorLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="#ffffff"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="#ffffff" />
        </LinearLayout>

        <Button
            android:id="@+id/qr_ButtonCreate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/click_to_create" />

        <Button
            android:id="@+id/qr_ButtonSave"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/click_to_save"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/qr_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
