<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/awesomeqr_main_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/contents" />

            <EditText
                android:id="@+id/awesomeqr_main_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_text"
                android:maxLines="3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/size_px_includes_the_margin_width_equals_to_height" />

            <EditText
                android:id="@+id/awesomeqr_main_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="800"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/margin_px" />

            <EditText
                android:id="@+id/awesomeqr_main_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="20"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/data_dot_scale_0_lt_scale_lt_1_0f" />

            <EditText
                android:id="@+id/awesomeqr_main_dotScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0.3"
                android:inputType="numberDecimal"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true" />


            <CheckBox
                android:id="@+id/awesomeqr_main_autoColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/auto_pick_color" />

            <LinearLayout
                android:id="@+id/awesomeqr_main_select_color_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="@string/colordark_true_dots_dddddd" />

                <EditText
                    android:id="@+id/awesomeqr_main_colorDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="#000000"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="#000000" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="@string/colorlight_false_dots_dddddd" />

                <EditText
                    android:id="@+id/awesomeqr_main_colorLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="#ffffff"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/awesomeqr_main_imgPathTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未选择背景图" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/awesomeqr_main_backgroundImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/select_image" />

                    <Button
                        android:id="@+id/awesomeqr_main_removeBackgroundImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/remove_image" />
                </LinearLayout>
            </LinearLayout>

            <CheckBox
                android:id="@+id/awesomeqr_main_whiteMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/white_margin_on_background_image" />

            <CheckBox
                android:id="@+id/awesomeqr_main_binarize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/binarize_background_image" />

            <EditText
                android:id="@+id/awesomeqr_main_binarizeThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="@string/binarizethreshold_0_lt_threshold_lt_255"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:visibility="gone" />

            <Button
                android:id="@+id/awesomeqr_main_generate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/click_to_create" />

            <Button
                android:id="@+id/awesomeqr_mainButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/click_to_save"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/awesomeqr_main_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
