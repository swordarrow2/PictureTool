<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ran="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.meng.picTools.lib.mengViews.MengEditText
                android:id="@+id/gif_creator_delay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ran:edittextHint="10"
                ran:textviewText="@string/frame_delay" />

            <Button
                android:id="@+id/gif_creator_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_picture" />

            <Button
				android:enabled="false"
                android:id="@+id/gif_creator_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_encode" />
			<ProgressBar
				android:id="@+id/gif_creator_progress_bar"
				style="@android:style/Widget.Holo.ProgressBar.Horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

			<ListView
				android:id="@+id/gif_creator_list"
				android:layout_width="match_parent"
				android:layout_height="match_parent" />
        </LinearLayout>

</RelativeLayout>
